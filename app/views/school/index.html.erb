<script type="text/javascript">
$(function() {
	displayNoneStudent();

	$('#student-1').hover(function() {$('#student-popup-1').css('display', 'block'); }, displayNoneStudent );
	$('#student-2').hover(function() {$('#student-popup-2').css('display', 'block'); }, displayNoneStudent );
	$('#student-3').hover(function() {displayBackvards($('#student-popup-3'),'-250px');}, displayNoneStudent );

	function displayNoneStudent(){
		$('#student-popup-1').css('display', 'none');
		$('#student-popup-2').css('display', 'none');
		$('#student-popup-3').css('display', 'none');
	};

	function displayBackvards(el, pix){
		el.css('display', 'block');
		el.css('margin-left', pix);
	};
});
</script>